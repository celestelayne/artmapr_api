<h1>Welcome to API Arts Index.</h1>

<div>
  There are currently <%= @arts.length %> pieces of art available in the ArtMapr API.
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Medium</th>
    </tr>
  </thead>
  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.title %></td>
        <td><%= art.artist %></td>
        <td><%= art.medium %></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Art', new_art_path %>
